	<%= error_messages_for(@page) %>
	
	<table summary="Subject for fields">
		<tr>
			<th>Subject ID</th>
			<td><%= f.select(:subject_id, Subject.all.collect {|s| [s.id]}) %></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name) %></td>
		</tr>
		<tr>
			<th>Position</th>
			<td><%= f.select(:position, 1..@page_count) %></td>
		</tr>
		<tr>
			<th>Visible?</th>
			<td><%= f.check_box(:visible) %></td>
		</tr>
		<tr>
			<th>Permalink</th>
			<td><%= f.text_field(:permalink) %></td>
		</tr>
		
	</table>